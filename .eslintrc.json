{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jasmine": true
  },
    "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
  "react/jsx-uses-vars": 2,
  "no-console": 1,
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ],
  "no-multiple-empty-lines": [
    "error",
    { "max": 1, "maxEOF": 1 }
  ],
  "max-len": [
    "error",
    120,
    { "ignoreUrls": true },
    { "ignoreStrings": true }
  ],
  "linebreak-style": [
    "error",
    "unix"
  ],
  "quotes": [
    "error",
    "single"
  ],
  "semi": [
    "error",
    "always"
  ]}
}
